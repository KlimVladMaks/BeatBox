<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Элемент круг -->
    <item>

        <!-- Создаём круглую форму для фона нажатой кнопки -->
        <shape
            android:shape="oval">

            <!-- Цвет фнутренней заливки формы -->
            <solid
                android:color="@color/dark_red"/>

        </shape>

    </item>

    <!-- Элемент окружность -->
    <item>

        <!-- Создаём круглую форму -->
        <shape
            android:shape="oval">

            <!-- Указываем параметры обводки -->
            <stroke
                android:width="4dp"
                android:color="@color/orange"/>

        </shape>

    </item>

</layer-list>



